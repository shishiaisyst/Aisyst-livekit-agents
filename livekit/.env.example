# ===================================================================
# LiveKit Configuration
# ===================================================================
# Get these from: https://cloud.livekit.io/projects/p_/settings
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=APIxxxxxxxxxxxxxxxxx
LIVEKIT_API_SECRET=your-livekit-api-secret

# ===================================================================
# AI Model Provider Configuration
# ===================================================================

# OpenAI - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxx

# Deepgram STT - Get from: https://console.deepgram.com/
DEEPGRAM_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Cartesia TTS - Get from: https://play.cartesia.ai/
CARTESIA_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================================================================
# Twilio SMS Configuration
# ===================================================================
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890

# Optional: Twilio webhook URL for delivery status callbacks
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio

# ===================================================================
# Stripe Payment Configuration
# ===================================================================
# Get these from: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_) for development, live keys (sk_live_) for production
STRIPE_API_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Payment redirect URLs
STRIPE_SUCCESS_URL=https://your-restaurant.com/order-success
STRIPE_CANCEL_URL=https://your-restaurant.com/order-cancelled

# ===================================================================
# Restaurant Configuration
# ===================================================================
RESTAURANT_NAME=Your Restaurant Name
RESTAURANT_PHONE=+1234567890
RESTAURANT_EMAIL=orders@yourrestaurant.com
RESTAURANT_ADDRESS=123 Main St, City, State 12345
RESTAURANT_WEBSITE=https://yourrestaurant.com

# Business hours (24-hour format)
RESTAURANT_OPEN_TIME=09:00
RESTAURANT_CLOSE_TIME=22:00

# Tax rate (decimal, e.g., 0.08 for 8%)
RESTAURANT_TAX_RATE=0.08

# ===================================================================
# Agent Configuration
# ===================================================================
# Agent dispatch name for explicit routing
AGENT_NAME=restaurant-order-agent

# Agent behavior settings
AGENT_LANGUAGE=en-US
AGENT_MAX_ORDER_ITEMS=20
AGENT_ORDER_TIMEOUT=1800  # 30 minutes in seconds

# Voice settings
TTS_VOICE_ID=9626c31c-bec5-4cca-baa8-f8ba9e84c8bc  # Cartesia voice ID
TTS_SPEED=1.0
TTS_EMOTION=friendly

# ===================================================================
# Monitoring & Logging Configuration
# ===================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Enable/disable metrics collection
ENABLE_METRICS=true
METRICS_PORT=8080

# Sentry error tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===================================================================
# Development & Testing Configuration
# ===================================================================
# Set to 'development', 'staging', or 'production'
ENVIRONMENT=development

# Enable verbose logging for agent evaluations
LIVEKIT_EVALS_VERBOSE=0

# Enable debug mode (more detailed logs)
DEBUG=false

# Test phone number for development
TEST_PHONE_NUMBER=+1234567890

# ===================================================================
# Database Configuration (Optional - for order persistence)
# ===================================================================
# Uncomment if using a database for order history
# DATABASE_URL=postgresql://user:password@localhost:5432/restaurant_orders
# DATABASE_POOL_SIZE=5

# ===================================================================
# Cache Configuration (Optional - for menu caching)
# ===================================================================
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=3600  # 1 hour in seconds

# ===================================================================
# Security Configuration
# ===================================================================
# Secret key for signing tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-generate-with-openssl

# API rate limiting
RATE_LIMIT_PER_MINUTE=60

# ===================================================================
# Feature Flags
# ===================================================================
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PAYMENT_LINKS=true
ENABLE_ORDER_MODIFICATIONS=true
ENABLE_VOICE_RECORDING=false
ENABLE_ANALYTICS=true
